<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Shopware\Core\Framework\Attribute\AttributeDefinition">
            <tag name="shopware.entity.definition" entity="attribute"/>
        </service>

        <service id="Shopware\Core\Framework\Attribute\AttributeSetDefinition">
            <tag name="shopware.entity.definition" entity="attribute_set"/>
        </service>

        <service id="Shopware\Core\Framework\Attribute\AttributeSetRelationDefinition">
            <tag name="shopware.entity.definition" entity="attribute_set_relation"/>
        </service>


        <service class="Shopware\Core\Framework\DataAbstractionLayer\EntityRepository" id="attribute.repository" public="true">
            <argument>Shopware\Core\Framework\Attribute\AttributeDefinition</argument>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Read\EntityReaderInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\VersionManager"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntitySearcherInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntityAggregatorInterface"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service class="Shopware\Core\Framework\DataAbstractionLayer\EntityRepository" id="attribute_set.repository" public="true">
            <argument>Shopware\Core\Framework\Attribute\AttributeSetDefinition</argument>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Read\EntityReaderInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\VersionManager"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntitySearcherInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntityAggregatorInterface"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service class="Shopware\Core\Framework\DataAbstractionLayer\EntityRepository" id="attribute_set_relation.repository" public="true">
            <argument>Shopware\Core\Framework\Attribute\AttributeSetRelationDefinition</argument>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Read\EntityReaderInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\VersionManager"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntitySearcherInterface"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\Search\EntityAggregatorInterface"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Shopware\Core\Framework\Attribute\Api\AttributeSetActionController" public="true">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionRegistry"/>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="Shopware\Core\Framework\Attribute\AttributeService">
            <argument type="service" id="attribute.repository"/>

            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>