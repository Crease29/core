<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Core\Framework\MessageQueue\AsyncDispatcher">
            <argument type="service" id="messenger.bus.default"/>
            <argument type="service" id="message_queue_size.repository"/>
        </service>

        <service id="Shopware\Core\Framework\MessageQueue\MessageHandler\DefaultMessageHandler">
            <argument type="service" id="message_queue_size.repository"/>
            <argument type="service" id="event_dispatcher"/>
            <tag name="messenger.message_handler"/>
        </service>
    </services>
</container>