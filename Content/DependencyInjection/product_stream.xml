<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Shopware\Core\Content\ProductStream\ProductStreamDefinition">
            <tag name="shopware.entity.definition" entity="product_stream"/>
        </service>
        <service id="Shopware\Core\Content\ProductStream\Aggregate\ProductStreamCondition\ProductStreamConditionDefinition">
            <tag name="shopware.entity.definition" entity="product_stream_condition"/>
        </service>

        <service class="Shopware\Core\Content\ConditionTree\ConditionTreeValidator" id="product_stream.condition_tree_validator">
            <argument type="service" id="validator"/>
            <argument type="service" id="product_stream.condition_registry"/>
            <argument>Shopware\Core\Content\ProductStream\Aggregate\ProductStreamCondition\ProductStreamConditionDefinition</argument>

            <tag name="shopware.validator"/>
        </service>

        <service id="Shopware\Core\Content\ProductStream\ProductStreamProductCondition">
            <tag name="product_stream.definition"/>
        </service>
    </services>
</container>
