<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="product_export.directory">export</parameter>
        <parameter key="product_export.read_buffer_size">100</parameter>
    </parameters>
    <services>
        <service id="Shopware\Core\Content\ProductExport\ProductExportDefinition">
            <tag name="shopware.entity.definition" entity="product_export"/>
        </service>

        <service id="Shopware\Core\Content\ProductExport\Service\ProductExportRenderService">
            <argument type="service" id="Shopware\Core\Framework\Twig\StringTemplateRenderer"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Shopware\Core\Content\ProductExport\Service\ProductExportService" public="true">
            <argument type="service" id="product_export.repository"/>
            <argument type="service" id="Shopware\Core\Content\ProductStream\Service\ProductStreamService"/>
            <argument type="service" id="Shopware\Core\Content\ProductExport\Service\ProductExportRenderService"/>
            <argument type="service" id="shopware.filesystem.private"/>
            <argument type="service" id="Shopware\Core\Content\ProductExport\Service\ProductExportFileService"/>
            <argument type="string">%product_export.read_buffer_size%</argument>
        </service>

        <service id="Shopware\Core\Content\ProductExport\Service\ProductExportFileService">
            <argument type="service" id="shopware.filesystem.private"/>
            <argument type="string">%product_export.directory%</argument>
        </service>

        <service id="Shopware\Core\Content\ProductExport\Command\ProductExportGenerateCommand">
            <argument type="service" id="Shopware\Core\System\SalesChannel\Context\SalesChannelContextFactory"/>
            <argument type="service" id="Shopware\Core\Content\ProductExport\Service\ProductExportService"/>
            <tag name="console.command"/>
        </service>

        <service id="Shopware\Core\Content\ProductExport\ScheduledTask\ProductExportGenerateTask">
            <tag name="shopware.scheduled.task"/>
        </service>

        <service id="Shopware\Core\Content\ProductExport\ScheduledTask\ProductExportGenerateTaskHandler">
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="Shopware\Core\Content\ProductExport\Service\ProductExportService"/>
            <argument type="service" id="Shopware\Core\System\SalesChannel\Context\SalesChannelContextFactory"/>
            <argument type="service" id="sales_channel.repository"/>
            <tag name="messenger.message_handler"/>
        </service>

        <service id="Shopware\Core\Content\ProductExport\Extension\SalesChannelExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Core\Content\ProductExport\Extension\SalesChannelDomainExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Shopware\Core\Content\ProductExport\Extension\ProductStreamExtension">
            <tag name="shopware.entity.extension"/>
        </service>
    </services>
</container>
