<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Content\Media\Repository\MediaRepository.v1" id="Shopware\Content\Media\Repository\MediaRepository" public="true"/>
        <service alias="Shopware\Content\Media\Repository\MediaAlbumRepository.v1" id="Shopware\Content\Media\Repository\MediaAlbumRepository" public="true"/>
        <service alias="Shopware\Content\Media\Repository\MediaAlbumTranslationRepository.v1" id="Shopware\Content\Media\Repository\MediaAlbumTranslationRepository" public="true"/>
        <service alias="Shopware\Content\Media\Repository\MediaTranslationRepository.v1" id="Shopware\Content\Media\Repository\MediaTranslationRepository" public="true"/>

         <service class="Shopware\Content\Media\Definition\MediaDefinition" id="Shopware\Content\Media\Definition\MediaDefinition" >
            <tag name="shopware.entity.definition" entity="media" />
        </service>
        <service class="Shopware\Content\Media\Repository\MediaRepository" id="Shopware\Content\Media\Repository\MediaRepository.v1" public="true">
          <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Content\Media\Definition\MediaAlbumDefinition" id="Shopware\Content\Media\Definition\MediaAlbumDefinition" >
            <tag name="shopware.entity.definition" entity="media_album" />
        </service>
        <service class="Shopware\Content\Media\Repository\MediaAlbumRepository" id="Shopware\Content\Media\Repository\MediaAlbumRepository.v1" public="true">
          <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Content\Media\Definition\MediaAlbumTranslationDefinition" id="Shopware\Content\Media\Definition\MediaAlbumTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="media_album_translation" />
        </service>
        <service class="Shopware\Content\Media\Repository\MediaAlbumTranslationRepository" id="Shopware\Content\Media\Repository\MediaAlbumTranslationRepository.v1" public="true">
          <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Content\Media\Definition\MediaTranslationDefinition" id="Shopware\Content\Media\Definition\MediaTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="media_translation" />
        </service>
        <service class="Shopware\Content\Media\Repository\MediaTranslationRepository" id="Shopware\Content\Media\Repository\MediaTranslationRepository.v1" public="true">
          <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>


        <service class="Shopware\Content\Media\Extension\UrlExtension" id="Shopware\Content\Media\Extension\UrlExtension">
            <argument id="Shopware\Content\Media\UrlGenerator" type="service"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service class="Shopware\Content\Media\Extension\ThumbnailExtension" id="Shopware\Content\Media\Extension\ThumbnailExtension">
            <argument id="Shopware\Content\Media\UrlGenerator" type="service"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- ProductMedia Extension -->

        <service class="Shopware\Content\Media\GarbageCollector\GarbageCollectorFactory" id="Shopware\Content\Media\GarbageCollector\GarbageCollectorFactory">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <argument type="service" id="Shopware\Content\Media\Strategy\StrategyInterface" />
        </service>

        <service class="Shopware\Content\Media\GarbageCollector\GarbageCollector" id="Shopware\Content\Media\GarbageCollector\GarbageCollector">
            <factory service="Shopware\Content\Media\GarbageCollector\GarbageCollectorFactory" method="factory" />
        </service>

        <service class="Shopware\Framework\Filesystem\PrefixFilesystem" id="Shopware\Framework\Filesystem\PrefixFilesystem">
            <argument type="service" id="shopware.filesystem.public" />
            <argument>media</argument>
        </service>

        <service class="Shopware\Content\Media\Strategy\StrategyFilesystem" id="Shopware\Content\Media\Strategy\StrategyFilesystem">
            <argument type="service" id="Shopware\Framework\Filesystem\PrefixFilesystem" />
            <argument type="service" id="Shopware\Content\Media\Strategy\StrategyInterface" />
        </service>

        <service class="Shopware\Content\Media\UrlGenerator" id="Shopware\Content\Media\UrlGenerator">
            <argument type="service" id="Shopware\Content\Media\Strategy\StrategyInterface" />
            <argument type="service" id="request_stack" />
            <argument>%shopware.cdn.url%</argument>
        </service>

        <service class="Shopware\Content\Media\MediaReplaceService" id="Shopware\Content\Media\MediaReplaceService">
            <argument type="service" id="Shopware\Content\Media\Strategy\StrategyFilesystem" />
            <!--<argument type="service" id="thumbnail_manager"/>-->
            <!--<argument type="service" id="models" />-->
        </service>

        <service class="Shopware\Content\Media\Strategy\StrategyFactory" id="Shopware\Content\Media\Strategy\StrategyFactory">
            <argument type="tagged" tag="Shopware\Content\Media\Strategy\StrategyInterface" />
        </service>

        <service class="Shopware\Content\Media\Strategy\StrategyInterface" id="Shopware\Content\Media\Strategy\StrategyInterface">
            <factory service="Shopware\Content\Media\Strategy\StrategyFactory" method="factory" />
            <argument>%shopware.cdn.strategy%</argument>
        </service>

        <!-- Commands -->
        <service class="Shopware\Content\Media\Commands\MediaMigrateCommand" id="Shopware\Content\Media\Commands\MediaMigrateCommand">
            <argument type="service" id="Shopware\Content\Media\Strategy\StrategyFilesystem" />
            <argument type="service" id="Shopware\Content\Media\Strategy\StrategyFactory" />
            <argument type="service" id="event_dispatcher" />
            <tag name="console.command" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Shopware\Content\Media\Commands\MediaCleanupCommand" id="Shopware\Content\Media\Commands\MediaCleanupCommand">
            <argument type="service" id="Shopware\Content\Media\GarbageCollector\GarbageCollector" />
            <tag name="console.command" />
        </service>

        <service class="Shopware\Content\Media\Commands\MediaOptimizeCommand" id="Shopware\Content\Media\Commands\MediaOptimizeCommand">
            <argument type="service" id="Shopware\Content\Media\Optimizer\CacheOptimizerService" />
            <argument>%kernel.project_dir%/web/media</argument>
            <tag name="console.command" />
        </service>

        <!-- Strategies -->
        <service class="Shopware\Content\Media\Strategy\Md5Strategy" id="Shopware\Content\Media\Strategy\StrategyInterface.md5">
            <tag name="Shopware\Content\Media\Strategy\StrategyInterface" />
        </service>

        <service class="Shopware\Content\Media\Strategy\PlainStrategy" id="Shopware\Content\Media\Strategy\StrategyInterface.plain">
            <tag name="Shopware\Content\Media\Strategy\StrategyInterface" />
        </service>

        <!-- Optimizer -->
        <service class="Shopware\Content\Media\Optimizer\OptimizerService" id="Shopware\Content\Media\Optimizer\OptimizerService">
            <argument type="tagged" tag="shopware.media.optimizer" />
            <argument type="service" id="Shopware\Content\Media\Strategy\StrategyFilesystem" />
        </service>

        <service id="Shopware\Content\Media\Optimizer\CacheOptimizerService" class="Shopware\Content\Media\Optimizer\CacheOptimizerService"
                 decorates="Shopware\Content\Media\Optimizer\OptimizerService" public="false">
            <argument type="service" id="Shopware\Content\Media\Optimizer\CacheOptimizerService.inner" />
        </service>

        <service class="Shopware\Content\Media\Optimizer\JpegoptimOptimizer" id="Shopware\Content\Media\Optimizer\JpegoptimOptimizer">
            <tag name="shopware.media.optimizer" priority="100" />
        </service>

        <service class="Shopware\Content\Media\Optimizer\JpegtranOptimizer" id="Shopware\Content\Media\Optimizer\JpegtranOptimizer">
            <tag name="shopware.media.optimizer" priority="90" />
        </service>

        <service class="Shopware\Content\Media\Optimizer\PngoutOptimizer" id="Shopware\Content\Media\Optimizer\PngoutOptimizer">
            <tag name="shopware.media.optimizer" priority="100" />
        </service>

        <service class="Shopware\Content\Media\Optimizer\OptipngOptimizer" id="Shopware\Content\Media\Optimizer\OptipngOptimizer">
            <tag name="shopware.media.optimizer" priority="90" />
        </service>

        <service class="Shopware\Content\Media\Optimizer\PngcrushOptimizer" id="Shopware\Content\Media\Optimizer\PngcrushOptimizer">
            <tag name="shopware.media.optimizer" priority="80" />
        </service>
    </services>
</container>                
                