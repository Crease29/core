<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Content\Media\Repository\MediaRepository.v1" id="Shopware\Content\Media\Repository\MediaRepository" public="true"/>
        <service alias="Shopware\Content\Media\Repository\MediaAlbumRepository.v1" id="Shopware\Content\Media\Repository\MediaAlbumRepository" public="true"/>
        <service alias="Shopware\Content\Media\Repository\MediaAlbumTranslationRepository.v1" id="Shopware\Content\Media\Repository\MediaAlbumTranslationRepository" public="true"/>
        <service alias="Shopware\Content\Media\Repository\MediaTranslationRepository.v1" id="Shopware\Content\Media\Repository\MediaTranslationRepository" public="true"/>

         <service class="Shopware\Content\Media\Definition\MediaDefinition" id="Shopware\Content\Media\Definition\MediaDefinition" >
            <tag name="shopware.entity.definition" entity="media" />
        </service>
        <service class="Shopware\Content\Media\Repository\MediaRepository" id="Shopware\Content\Media\Repository\MediaRepository.v1" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Content\Media\Definition\MediaAlbumDefinition" id="Shopware\Content\Media\Definition\MediaAlbumDefinition" >
            <tag name="shopware.entity.definition" entity="media_album" />
        </service>
        <service class="Shopware\Content\Media\Repository\MediaAlbumRepository" id="Shopware\Content\Media\Repository\MediaAlbumRepository.v1" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Content\Media\Definition\MediaAlbumTranslationDefinition" id="Shopware\Content\Media\Definition\MediaAlbumTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="media_album_translation" />
        </service>
        <service class="Shopware\Content\Media\Repository\MediaAlbumTranslationRepository" id="Shopware\Content\Media\Repository\MediaAlbumTranslationRepository.v1" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Content\Media\Definition\MediaTranslationDefinition" id="Shopware\Content\Media\Definition\MediaTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="media_translation" />
        </service>
        <service class="Shopware\Content\Media\Repository\MediaTranslationRepository" id="Shopware\Content\Media\Repository\MediaTranslationRepository.v1" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                