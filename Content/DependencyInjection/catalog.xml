<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Content\Catalog\Repository\CatalogRepository.v1" id="Shopware\Content\Catalog\Repository\CatalogRepository" public="true" />

        <service class="Shopware\Content\Catalog\Definition\CatalogDefinition" id="Shopware\Content\Catalog\Definition\CatalogDefinition">
            <tag name="shopware.entity.definition" entity="catalog"/>
        </service>

        <service class="Shopware\Content\Catalog\Repository\CatalogRepository" id="Shopware\Content\Catalog\Repository\CatalogRepository.v1" public="true">
            <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
            <argument id="Shopware\Version\VersionManager" type="service"/>
            <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
            <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                