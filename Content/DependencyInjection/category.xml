<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Content\Category\Repository\CategoryRepository.v1" id="Shopware\Content\Category\Repository\CategoryRepository" public="true" />
        <service alias="Shopware\Content\Category\Repository\CategoryTranslationRepository.v1" id="Shopware\Content\Category\Repository\CategoryTranslationRepository" public="true" />

         <service class="Shopware\Content\Category\Definition\CategoryDefinition" id="Shopware\Content\Category\Definition\CategoryDefinition" >
            <tag name="shopware.entity.definition" entity="category" />
        </service>

         <service class="Shopware\Content\Category\Definition\CategoryTranslationDefinition" id="Shopware\Content\Category\Definition\CategoryTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="category_translation" />
        </service>

        <service class="Shopware\Content\Category\Repository\CategoryRepository" id="Shopware\Content\Category\Repository\CategoryRepository.v1" public="true">
          <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>

        <service class="Shopware\Content\Category\Repository\CategoryTranslationRepository" id="Shopware\Content\Category\Repository\CategoryTranslationRepository.v1" public="true">
          <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                