<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="Shopware\Core\Content\Rule\RuleDefinition" id="Shopware\Core\Content\Rule\RuleDefinition">
            <tag name="shopware.entity.definition" entity="rule"/>
        </service>

        <service class="Shopware\Core\Content\Rule\RuleBuilder" id="Shopware\Core\Content\Rule\RuleBuilder">
            <argument id="serializer" type="service"/>
        </service>

        <service id="Shopware\Core\Content\Rule\RuleController" class="Shopware\Core\Content\Rule\RuleController" public="true">
            <argument id="Shopware\Core\Content\Rule\RuleBuilder" type="service"/>
            <argument type="tagged" tag="rule_type.definition"/>
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>
        <service class="Shopware\Core\Content\Rule\Aggregate\RuleCondition\RuleConditionDefinition" id="Shopware\Core\Content\Rule\Aggregate\RuleCondition\RuleConditionDefinition">
            <tag name="shopware.entity.definition" entity="rule_condition"/>
        </service>

        <service class="Shopware\Core\Content\Rule\DataAbstractionLayer\Indexing\RulePayloadIndexer" id="Shopware\Core\Content\Rule\DataAbstractionLayer\Indexing\RulePayloadIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Content\Rule\Util\EventIdExtractor"/>
            <argument type="service" id="rule.repository"/>
            <argument type="service" id="serializer"/>

            <tag name="shopware.dbal_indexing.indexer"/>
        </service>

        <service class="Shopware\Core\Content\Rule\Util\EventIdExtractor" id="Shopware\Core\Content\Rule\Util\EventIdExtractor"/>
    </services>
</container>
