<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Context\Service\ContextFactory" id="Shopware\Context\Service\ContextFactory">
            <argument type="service" id="Shopware\Api\Application\Repository\ApplicationRepository"/>
            <argument type="service" id="Shopware\System\Currency\Repository\CurrencyRepository"/>
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerRepository"/>
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerGroupRepository"/>
            <argument type="service" id="Shopware\System\Country\Repository\CountryRepository"/>
            <argument type="service" id="Shopware\Api\Tax\Repository\TaxRepository"/>
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerAddressRepository"/>
            <argument type="service" id="Shopware\Api\Payment\Repository\PaymentMethodRepository"/>
            <argument type="service" id="Shopware\Api\Shipping\Repository\ShippingMethodRepository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\System\Country\Repository\CountryStateRepository"/>
            <argument type="service" id="Shopware\Api\Language\Repository\LanguageRepository"/>
            <argument type="service" id="Shopware\Cart\Tax\TaxDetector"/>
        </service>

        <service class="Shopware\Context\Service\ContextRuleLoader" id="Shopware\Context\Service\ContextRuleLoader">
            <argument id="Shopware\CartBridge\Cart\CartPersister" type="service"/>
            <argument id="Shopware\Cart\Tax\TaxDetector" type="service"/>
            <argument id="Shopware\Cart\Cart\CartCollector" type="service"/>
            <argument id="Shopware\Cart\Cart\CartProcessor" type="service"/>
            <argument id="Shopware\Cart\Cart\CartValidator" type="service"/>
            <argument id="shopware.cache" type="service"/>
            <argument id="Shopware\Api\Context\Repository\ContextRuleRepository" type="service"/>
            <argument id="serializer" type="service"/>
            <argument type="service" id="Shopware\CartBridge\Service\StoreFrontCartService"/>
        </service>
    </services>
</container>
