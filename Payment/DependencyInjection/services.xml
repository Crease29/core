<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Payment\PaymentProcessor" id="Shopware\Payment\PaymentProcessor">
            <argument type="service" id="Shopware\Payment\Token\PaymentTransactionTokenFactory"/>
            <argument type="service" id="Shopware\Api\Order\Repository\OrderRepository"/>
            <argument type="service" id="Shopware\Api\Payment\Repository\PaymentMethodRepository"/>
            <argument type="service" id="router.default"/>
            <argument type="service" id="Shopware\Payment\PaymentHandlerRegistry"/>
        </service>

        <service class="Shopware\Payment\Token\PaymentTransactionTokenFactory" id="Shopware\Payment\Token\PaymentTransactionTokenFactory" public="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service class="Shopware\Payment\PaymentHandlerRegistry" id="Shopware\Payment\PaymentHandlerRegistry">
            <argument type="tagged" tag="payment.method" />
        </service>

        <service class="Shopware\Payment\PaymentHandler\PrePayment" id="Shopware\Payment\PaymentHandler\PrePayment">
            <tag name="payment.method" />
            <argument type="service" id="Shopware\Api\Order\Repository\OrderTransactionRepository"/>
        </service>

        <service class="Shopware\Payment\PaymentHandler\DebitPayment" id="Shopware\Payment\PaymentHandler\DebitPayment">
            <tag name="payment.method" />
            <argument type="service" id="Shopware\Api\Order\Repository\OrderTransactionRepository"/>
        </service>

        <service class="Shopware\Payment\PaymentHandler\CashPayment" id="Shopware\Payment\PaymentHandler\CashPayment">
            <tag name="payment.method" />
            <argument type="service" id="Shopware\Api\Order\Repository\OrderTransactionRepository"/>
        </service>

        <service class="Shopware\Payment\PaymentHandler\InvoicePayment" id="Shopware\Payment\PaymentHandler\InvoicePayment">
            <tag name="payment.method" />
            <argument type="service" id="Shopware\Api\Order\Repository\OrderTransactionRepository"/>
        </service>

        <service class="Shopware\Payment\PaymentHandler\SEPAPayment" id="Shopware\Payment\PaymentHandler\SEPAPayment">
            <tag name="payment.method" />
            <argument type="service" id="Shopware\Api\Order\Repository\OrderTransactionRepository"/>
        </service>
    </services>
</container>
