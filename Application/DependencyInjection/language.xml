<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Application\Language\Repository\LanguageRepository.v1" id="Shopware\Application\Language\Repository\LanguageRepository" public="true" />

        <service class="Shopware\Application\Language\Definition\LanguageDefinition" id="Shopware\Application\Language\Definition\LanguageDefinition" >
            <tag name="shopware.entity.definition" entity="language" />
        </service>
        <service class="Shopware\Application\Language\Repository\LanguageRepository" id="Shopware\Application\Language\Repository\LanguageRepository.v1" public="true">
            <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
            <argument id="Shopware\Framework\ORM\Version\Service\VersionManager" type="service"/>
            <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
            <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                