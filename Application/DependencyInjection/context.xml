<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Core\Checkout\Rule\ContextRuleRepository.v1" id="Shopware\Core\Checkout\Rule\ContextRuleRepository" public="true" />
        <service alias="Shopware\Core\Application\Context\Repository\ContextCartModifierRepository.v1" id="Shopware\Core\Application\Context\Repository\ContextCartModifierRepository" public="true" />

        <service class="Shopware\Core\Application\Context\Cart\ContextCartModifierProcessor" id="Shopware\Core\Application\Context\Cart\ContextCartModifierProcessor">
            <argument id="Shopware\Core\Application\Context\Repository\ContextCartModifierRepository" type="service"/>
            <argument id="Shopware\Core\Checkout\Cart\Price\AbsolutePriceCalculator" type="service"/>
            <argument id="Shopware\Core\Checkout\Cart\Price\PercentagePriceCalculator" type="service"/>
            <tag name="cart.processor" priority="700"/>
        </service>

        <service class="Shopware\Core\Application\Context\Cart\ContextCartModifierCollector" id="Shopware\Core\Application\Context\Cart\ContextCartModifierCollector">
            <argument id="Shopware\Core\Application\Context\Repository\ContextCartModifierRepository" type="service"/>
            <tag name="cart.collector"/>
        </service>

        <service class="Shopware\Core\Checkout\Rule\ContextRuleDefinition" id="Shopware\Core\Checkout\Rule\ContextRuleDefinition" >
            <tag name="shopware.entity.definition" entity="context_rule" />
        </service>

        <service class="Shopware\Core\Checkout\Rule\ContextRuleRepository" id="Shopware\Core\Checkout\Rule\ContextRuleRepository.v1" public="true">
          <argument id="Shopware\Core\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Core\Framework\ORM\Version\Service\VersionManager" type="service"/>
          <argument id="Shopware\Core\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Core\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>

        <service class="Shopware\Core\Application\Context\Definition\ContextCartModifierDefinition" id="Shopware\Core\Touchpoint\Context\Definition\ContextCartModifierDefinition" >
            <tag name="shopware.entity.definition" entity="context_cart_modifier" />
        </service>

        <service class="Shopware\Core\Application\Context\Repository\ContextCartModifierRepository" id="Shopware\Core\Application\Context\Repository\ContextCartModifierRepository.v1" public="true">
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntityReader" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Version\Service\VersionManager" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntitySearcher" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntityAggregator" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>


    </services>
</container>
                