<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service class="Shopware\Checkout\CartBridge\Modifier\ContextCartModifierProcessor" id="Shopware\Checkout\CartBridge\Modifier\ContextCartModifierProcessor">
            <argument id="Shopware\Application\Context\Repository\ContextCartModifierRepository" type="service"/>
            <argument id="Shopware\Checkout\Cart\Price\AbsolutePriceCalculator" type="service"/>
            <argument id="Shopware\Checkout\Cart\Price\PercentagePriceCalculator" type="service"/>
            <tag name="cart.processor" priority="700"/>
        </service>


        <!--cart line item data collectors-->

        <service class="Shopware\Checkout\CartBridge\Modifier\ContextCartModifierCollector" id="Shopware\Checkout\CartBridge\Modifier\ContextCartModifierCollector">
            <argument id="Shopware\Application\Context\Repository\ContextCartModifierRepository" type="service"/>
            <tag name="cart.collector"/>
        </service>

        <!--interface implementations of cart bundle-->

        <service class="Shopware\Checkout\CartBridge\Service\StoreFrontCartService" id="Shopware\Checkout\CartBridge\Service\StoreFrontCartService">
            <argument type="service" id="Shopware\Checkout\Cart\Cart\CircularCartCalculation" />
            <argument type="service" id="Shopware\Checkout\CartBridge\Cart\CartPersister" />
            <argument type="service" id="Shopware\Checkout\Order\Cart\OrderPersister" />
        </service>

        <service class="Shopware\Checkout\CartBridge\Cart\CartPersister" id="Shopware\Checkout\CartBridge\Cart\CartPersister">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <argument type="service" id="serializer" />
        </service>

    </services>
</container>
