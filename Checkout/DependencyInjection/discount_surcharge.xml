<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Core\Checkout\DiscountSurcharge\DiscountSurchargeRepository.v1" id="Shopware\Core\Checkout\DiscountSurcharge\DiscountSurchargeRepository" public="true" />

        <service class="Shopware\Core\Checkout\DiscountSurcharge\Cart\DiscountSurchargeProcessor" id="Shopware\Core\Checkout\DiscountSurcharge\Cart\DiscountSurchargeProcessor">
            <argument id="Shopware\Core\Checkout\Cart\Price\AbsolutePriceCalculator" type="service"/>
            <argument id="Shopware\Core\Checkout\Cart\Price\PercentagePriceCalculator" type="service"/>
            <tag name="cart.processor" priority="700"/>
        </service>

        <service class="Shopware\Core\Checkout\DiscountSurcharge\Cart\DiscountSurchargeCollector" id="Shopware\Core\Checkout\DiscountSurcharge\Cart\DiscountSurchargeCollector">
            <argument id="Shopware\Core\Checkout\DiscountSurcharge\DiscountSurchargeRepository" type="service"/>
            <tag name="cart.collector"/>
        </service>

        <service class="Shopware\Core\Checkout\DiscountSurcharge\DiscountSurchargeDefinition" id="Shopware\Core\Checkout\DiscountSurcharge\DiscountSurchargeDefinition" >
            <tag name="shopware.entity.definition" entity="discount_surcharge" />
        </service>

        <service class="Shopware\Core\Checkout\DiscountSurcharge\DiscountSurchargeRepository" id="Shopware\Core\Checkout\DiscountSurcharge\DiscountSurchargeRepository.v1" public="true">
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntityReader" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Version\Service\VersionManager" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntitySearcher" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntityAggregator" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>
