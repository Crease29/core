<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Core\Checkout\Shipping\ShippingMethodDefinition">
            <tag name="shopware.entity.definition" entity="shipping_method"/>
        </service>

        <service id="Shopware\Core\Checkout\Shipping\Aggregate\ShippingMethodPriceRule\ShippingMethodPriceRuleDefinition">
            <tag name="shopware.entity.definition" entity="shipping_method_price_rule"/>
        </service>

        <service id="Shopware\Core\Checkout\Shipping\Aggregate\ShippingMethodTranslation\ShippingMethodTranslationDefinition">
            <tag name="shopware.entity.definition" entity="shipping_method_translation"/>
        </service>

        <service id="Shopware\Core\Checkout\Shipping\Aggregate\ShippingMethodRules\ShippingMethodRuleDefinition">
            <tag name="shopware.entity.definition" entity="shipping_method_rule"/>
        </service>

        <service id="Shopware\Core\Checkout\Shipping\Cart\ShippingMethodValidator">
            <tag name="Shopware\Core\Checkout\Cart\CartValidatorInterface"/>
        </service>

        <service id="Shopware\Core\Checkout\Shipping\DataAbstractionLayer\Indexing\ShippingMethodIndexer">
            <argument type="service" id="shipping_method.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Checkout\Shipping\Util\EventIdExtractor"/>

            <tag name="shopware.dbal_indexing.indexer"/>
        </service>

        <service id="Shopware\Core\Checkout\Shipping\Util\EventIdExtractor"/>
    </services>
</container>                
