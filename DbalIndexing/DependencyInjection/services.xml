<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\DbalIndexing\Common\IndexTableOperator" id="Shopware\DbalIndexing\Common\IndexTableOperator">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>

        <service class="Shopware\DbalIndexing\Indexer\Analyzer\SearchAnalyzerRegistry" id="Shopware\DbalIndexing\Indexer\Analyzer\SearchAnalyzerRegistry">
            <argument type="tagged" tag="shopware.search_analyzer"/>
        </service>

        <service class="Shopware\DbalIndexing\Indexer\IndexerRegistry" id="Shopware\DbalIndexing\Indexer\IndexerRegistry">
            <argument type="tagged" tag="shopware.dbal_indexing.indexer"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service class="Shopware\DbalIndexing\Command\RefreshIndexCommand" id="Shopware\DbalIndexing\Command\RefreshIndexCommand">
            <argument type="service" id="Shopware\DbalIndexing\Indexer\IndexerRegistry"/>
            <tag name="kernel.event_subscriber"/>
            <tag name="console.command"/>
        </service>

        <service class="Shopware\DbalIndexing\Indexer\Analyzer\LanguageAnalyzer" id="Shopware\DbalIndexing\Indexer\Analyzer\LanguageAnalyzer">
            <argument id="Shopware\Api\Entity\Search\Term\Tokenizer" type="service"/>
            <argument id="Shopware\Api\Entity\Search\Term\StopWordFilter" type="service"/>
            <tag name="shopware.search_analyzer" />
        </service>

        <service class="Shopware\DbalIndexing\Common\EventIdExtractor" id="Shopware\DbalIndexing\Common\EventIdExtractor"/>

        <service class="Shopware\DbalIndexing\Indexer\InheritanceIndexer" id="Shopware\DbalIndexing\Indexer\InheritanceIndexer">
            <tag name="shopware.dbal_indexing.indexer" priority="1500"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service class="Shopware\DbalIndexing\Indexer\CategoryAssignmentIndexer" id="Shopware\DbalIndexing\Indexer\CategoryAssignmentIndexer">
            <argument id="Shopware\Api\Product\Repository\ProductRepository" type="service"/>
            <argument id="Doctrine\DBAL\Connection" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="Shopware\Category\Extension\CategoryPathBuilder" type="service"/>
            <argument id="Shopware\DbalIndexing\Common\EventIdExtractor" type="service"/>
            <argument id="Shopware\Api\Category\Repository\CategoryRepository" type="service"/>
            <tag name="shopware.dbal_indexing.indexer" priority="1000"/>
        </service>

        <service class="Shopware\DbalIndexing\Indexer\VariationJsonIndexer" id="Shopware\DbalIndexing\Indexer\VariationJsonIndexer">
            <argument id="Shopware\Api\Product\Repository\ProductRepository" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="Shopware\DbalIndexing\Common\EventIdExtractor" type="service"/>
            <argument id="Doctrine\DBAL\Connection" type="service"/>
            <tag name="shopware.dbal_indexing.indexer" priority="900"/>
        </service>

        <service class="Shopware\DbalIndexing\Indexer\DatasheetJsonIndexer" id="Shopware\DbalIndexing\Indexer\DatasheetJsonIndexer">
            <argument id="Shopware\Api\Product\Repository\ProductRepository" type="service"/>
            <argument id="Doctrine\DBAL\Connection" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="Shopware\DbalIndexing\Common\EventIdExtractor" type="service"/>
            <tag name="shopware.dbal_indexing.indexer" priority="400"/>
        </service>

        <service class="Shopware\DbalIndexing\Indexer\ListingPriceIndexer" id="Shopware\DbalIndexing\Indexer\ListingPriceIndexer">
            <argument id="Shopware\Api\Product\Repository\ProductRepository" type="service"/>
            <argument id="event_dispatcher" type="service"/>
            <argument id="Shopware\DbalIndexing\Common\EventIdExtractor" type="service"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <tag name="shopware.dbal_indexing.indexer" priority="300"/>
        </service>

        <service class="Shopware\DbalIndexing\Indexer\SearchIndexer" id="Shopware\DbalIndexing\Indexer\SearchIndexer">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
            <argument type="service" id="Shopware\Api\Product\Repository\ProductRepository"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\DbalIndexing\Indexer\Analyzer\SearchAnalyzerRegistry"/>
            <argument type="service" id="Shopware\DbalIndexing\Common\IndexTableOperator"/>
            <argument type="service" id="Shopware\Api\Language\Repository\LanguageRepository"/>
            <argument type="service" id="Shopware\Api\Catalog\Repository\CatalogRepository"/>
            <tag name="shopware.dbal_indexing.indexer" priority="200"/>
        </service>

    </services>
</container>
