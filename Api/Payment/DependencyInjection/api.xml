<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Api\Payment\Repository\PaymentMethodRepository.v1" id="Shopware\Api\Payment\Repository\PaymentMethodRepository" public="true"/>
        <service alias="Shopware\Api\Payment\Repository\PaymentMethodTranslationRepository.v1" id="Shopware\Api\Payment\Repository\PaymentMethodTranslationRepository" public="true"/>

         <service class="Shopware\Api\Payment\Definition\PaymentMethodDefinition" id="Shopware\Api\Payment\Definition\PaymentMethodDefinition" >
            <tag name="shopware.entity.definition" entity="payment_method" />
        </service>
        <service class="Shopware\Api\Payment\Repository\PaymentMethodRepository" id="Shopware\Api\Payment\Repository\PaymentMethodRepository.v1" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Api\Payment\Definition\PaymentMethodTranslationDefinition" id="Shopware\Api\Payment\Definition\PaymentMethodTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="payment_method_translation" />
        </service>
        <service class="Shopware\Api\Payment\Repository\PaymentMethodTranslationRepository" id="Shopware\Api\Payment\Repository\PaymentMethodTranslationRepository.v1" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                