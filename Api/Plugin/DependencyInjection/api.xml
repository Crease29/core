<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Api\Plugin\Repository\PluginRepository.v1" id="Shopware\Api\Plugin\Repository\PluginRepository" public="true"/>


         <service class="Shopware\Api\Plugin\Definition\PluginDefinition" id="Shopware\Api\Plugin\Definition\PluginDefinition" >
            <tag name="shopware.entity.definition" entity="plugin" />
        </service>
        <service class="Shopware\Api\Plugin\Repository\PluginRepository" id="Shopware\Api\Plugin\Repository\PluginRepository.v1" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                