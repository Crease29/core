<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service class="Shopware\Rest\EventListener\CorsListener" id="Shopware\Rest\EventListener\CorsListener">
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Shopware\Rest\EventListener\ResponseExceptionListener" id="Shopware\Rest\EventListener\ResponseExceptionListener">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="logger" />
            <argument type="service" id="Shopware\Rest\Response\ResponseFactory" />
        </service>

        <service class="Shopware\Rest\Context\RestContextValueResolver" id="Shopware\Rest\Context\RestContextValueResolver">
            <tag name="controller.argument_value_resolver" priority="1000"/>
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="Shopware\Api\Entity\Dbal\EntitySearcher"/>
        </service>

        <service class="Shopware\Rest\Command\UserCreateCommand" id="Shopware\Rest\Command\UserCreateCommand">
            <argument id="Shopware\Api\User\Repository\UserRepository" type="service"/>
            <argument id="security.encoder_factory.generic" type="service"/>
            <tag name="console.command"/>
        </service>

        <service class="Shopware\Rest\Controller\ApiController" id="Shopware\Rest\Controller\ApiController" public="true">
            <argument id="Shopware\Api\Entity\DefinitionRegistry" type="service"/>
            <argument id="serializer" type="service"/>
            <argument id="Shopware\Rest\Response\ResponseFactory" type="service"/>
            <argument id="Shopware\Api\Entity\Write\EntityWriter" type="service"/>
            <argument type="service" id="Shopware\Api\Entity\Search\SearchCriteriaBuilder"/>
        </service>

        <service class="Shopware\Rest\Controller\SyncController" public="true" id="Shopware\Rest\Controller\SyncController" >
            <argument type="service" id="Shopware\Api\Entity\DefinitionRegistry"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="serializer"/>
        </service>

        <!-- Serializer -->
        <service class="Shopware\Rest\Serializer\JsonApiEncoder" id="shopware.api.serializer.json_api_encoder">
            <argument type="service" id="Shopware\Framework\Serializer\StructDecoder" />
            <tag name="serializer.encoder" />
        </service>

        <service class="Shopware\Rest\Serializer\JsonApiDecoder" id="shopware.api.serializer.json_api_decoder">
            <tag name="serializer.encoder" />
        </service>

        <!-- Response types -->
        <service class="Shopware\Rest\Response\ResponseFactory" id="Shopware\Rest\Response\ResponseFactory">
            <argument type="tagged" tag="shopware.rest.response_type" />
        </service>

        <service class="Shopware\Rest\Response\Type\JsonApiType" id="Shopware\Rest\Response\Type\JsonApiType">
            <argument type="service" id="serializer" />
            <argument>%kernel.debug%</argument>
            <tag name="shopware.rest.response_type" />
        </service>

        <service class="Shopware\Rest\Response\Type\JsonType" id="Shopware\Rest\Response\Type\JsonType">
            <argument type="service" id="serializer" />
            <argument>%kernel.debug%</argument>
            <tag name="shopware.rest.response_type" />
        </service>

        <!-- API Docs -->
        <service class="Shopware\Rest\ApiDefinition\DefinitionService" id="Shopware\Rest\ApiDefinition\DefinitionService">
            <argument type="tagged" tag="shopware.rest.definition_generator" />
        </service>

        <service class="Shopware\Rest\ApiDefinition\Generator\OpenApi3Generator" id="Shopware\Rest\ApiDefinition\Generator\OpenApi3Generator">
            <argument type="service" id="Shopware\Api\Entity\DefinitionRegistry" />
            <tag name="shopware.rest.definition_generator" />
        </service>

        <service class="Shopware\Rest\Controller\InfoController" id="Shopware\Rest\Controller\InfoController" public="true">
            <argument id="Shopware\Rest\ApiDefinition\DefinitionService" type="service"/>
        </service>

        <service class="Shopware\Rest\Controller\ProductActionController" id="Shopware\Rest\Controller\ProductActionController" public="true">
            <argument id="Shopware\Product\Service\VariantGenerator" type="service"/>
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>

        <service class="Shopware\Rest\Controller\PriceActionController" id="Shopware\Rest\Controller\PriceActionController" public="true">
            <argument type="service" id="serializer"/>
            <argument type="service" id="Shopware\Api\Tax\Repository\TaxRepository"/>
            <argument type="service" id="Shopware\Cart\Price\NetPriceCalculator"/>
            <argument type="service" id="Shopware\Cart\Price\GrossPriceCalculator"/>
        </service>

        <service class="Shopware\Rest\Controller\AuthController" id="Shopware\Rest\Controller\AuthController" public="true">
            <argument id="Shopware\Rest\Firewall\JWTAuthenticator" type="service"/>
        </service>

        <service class="Shopware\Rest\Firewall\TokenAuthenticator" id="Shopware\Rest\Firewall\TokenAuthenticator">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>

        <service class="Shopware\Rest\Firewall\JWTAuthenticator" id="Shopware\Rest\Firewall\JWTAuthenticator">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
            <argument>%kernel.project_dir%</argument>
        </service>

        <service class="Shopware\Rest\Firewall\RestUserProvider" id="Shopware\Rest\Firewall\RestUserProvider" />
    </services>
</container>
