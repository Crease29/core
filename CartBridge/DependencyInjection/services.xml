<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--calculations-->
        <service class="Shopware\CartBridge\Product\ProductCalculator" id="Shopware\CartBridge\Product\ProductCalculator">
            <argument id="Shopware\Cart\Price\PriceCalculator" type="service"/>
        </service>

        <!--cart processors-->
        <service class="Shopware\CartBridge\Product\ProductProcessor" id="Shopware\CartBridge\Product\ProductProcessor">
            <argument type="service" id="Shopware\CartBridge\Product\ProductCalculator" />
            <tag name="cart.processor" priority="1000" />
        </service>

        <service class="Shopware\CartBridge\CustomerGroup\CustomerGroupDiscountProcessor" id="Shopware\CartBridge\CustomerGroup\CustomerGroupDiscountProcessor">
            <argument id="Shopware\Cart\Price\PercentagePriceCalculator" type="service"/>
            <tag name="cart.processor" priority="800"/>
        </service>

        <service class="Shopware\CartBridge\Modifier\ContextCartModifierProcessor" id="Shopware\CartBridge\Modifier\ContextCartModifierProcessor">
            <argument id="Shopware\Api\Context\Repository\ContextCartModifierRepository" type="service"/>
            <argument id="Shopware\Cart\Price\AbsolutePriceCalculator" type="service"/>
            <argument id="Shopware\Cart\Price\PercentagePriceCalculator" type="service"/>
            <tag name="cart.processor" priority="700"/>
        </service>

        <service class="Shopware\CartBridge\Order\MinimumOrderAmountProcessor" id="Shopware\CartBridge\Order\MinimumOrderAmountProcessor">
            <argument type="service" id="Shopware\Cart\Price\AbsolutePriceCalculator"/>
            <tag name="cart.processor" priority="600"/>
        </service>

        <service class="Shopware\CartBridge\Payment\PaymentSurchargeProcessor" id="Shopware\CartBridge\Payment\PaymentSurchargeProcessor">
            <tag name="cart.processor" priority="500"/>
            <argument type="service" id="Shopware\Cart\Price\PercentagePriceCalculator"/>
            <argument type="service" id="Shopware\Cart\Price\AbsolutePriceCalculator"/>
        </service>

        <!--cart line item data collectors-->
        <service class="Shopware\CartBridge\Product\ProductCartCollector" id="Shopware\CartBridge\Product\ProductCartCollector">
            <argument id="Shopware\CartBridge\Product\ProductGateway" type="service"/>
            <tag name="cart.collector" priority="1000" />
            <argument type="service" id="Shopware\Content\Product\Repository\ProductServiceRepository"/>
        </service>

        <service class="Shopware\CartBridge\Modifier\ContextCartModifierCollector" id="Shopware\CartBridge\Modifier\ContextCartModifierCollector">
            <argument id="Shopware\Api\Context\Repository\ContextCartModifierRepository" type="service"/>
            <tag name="cart.collector"/>
        </service>

        <!--interface implementations of cart bundle-->

        <service id="Shopware\CartBridge\Product\ProductGateway" class="Shopware\CartBridge\Product\ProductGateway" >
            <argument type="service" id="Shopware\Content\Product\Repository\ProductRepository"/>
        </service>

        <service class="Shopware\CartBridge\Service\StoreFrontCartService" id="Shopware\CartBridge\Service\StoreFrontCartService">
            <argument type="service" id="Shopware\Cart\Cart\CircularCartCalculation" />
            <argument type="service" id="Shopware\CartBridge\Cart\CartPersister" />
            <argument type="service" id="Shopware\CartBridge\Order\OrderPersister" />
        </service>

        <service class="Shopware\CartBridge\Order\OrderPersister" id="Shopware\CartBridge\Order\OrderPersister">
            <argument id="Shopware\Api\Order\Repository\OrderRepository" type="service"/>
            <argument id="Shopware\Cart\Tax\TaxDetector" type="service"/>
        </service>

        <service class="Shopware\CartBridge\Cart\CartPersister" id="Shopware\CartBridge\Cart\CartPersister">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <argument type="service" id="serializer" />
        </service>

        <service class="Shopware\CartBridge\CustomerGroup\CustomerGroupDiscountCartCollector" id="Shopware\CartBridge\CustomerGroup\CustomerGroupDiscountCartCollector">
            <tag name="cart.collector" priority="-1000"/>
            <argument type="service" id="Shopware\Checkout\Customer\Repository\CustomerGroupDiscountRepository"/>
        </service>
    </services>
</container>
