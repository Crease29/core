<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->

        <service class="Shopware\Core\System\Config\ConfigFormDefinition" id="Shopware\Core\System\Config\ConfigFormDefinition" >
            <tag name="shopware.entity.definition" entity="config_form" />
        </service>


         <service class="Shopware\Core\System\Config\Aggregate\ConfigFormField\ConfigFormFieldDefinition" id="Shopware\Core\System\Config\Aggregate\ConfigFormField\ConfigFormFieldDefinition" >
            <tag name="shopware.entity.definition" entity="config_form_field" />
        </service>


         <service class="Shopware\Core\System\Config\Aggregate\ConfigFormFieldTranslation\ConfigFormFieldTranslationDefinition" id="Shopware\Core\System\Config\Aggregate\ConfigFormFieldTranslation\ConfigFormFieldTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="config_form_field_translation" />
        </service>



         <service class="Shopware\Core\System\Config\Aggregate\ConfigFormFieldValue\ConfigFormFieldValueDefinition" id="Shopware\Core\System\Config\Aggregate\ConfigFormFieldValue\ConfigFormFieldValueDefinition" >
            <tag name="shopware.entity.definition" entity="config_form_field_value" />
        </service>


         <service class="Shopware\Core\System\Config\Aggregate\ConfigFormTranslation\ConfigFormTranslationDefinition" id="Shopware\Core\System\Config\Aggregate\ConfigFormTranslation\ConfigFormTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="config_form_translation" />
        </service>




        <!-- Config -->
        <service class="Shopware\Core\System\Config\Util\CacheWarmer" id="Shopware\Core\System\Config\Util\CacheWarmer">
            <tag name="kernel.cache_warmer" />

            <argument type="service" id="Shopware\Core\System\Config\Util\ConfigService" />
        </service>

        <service class="Shopware\Core\System\Config\Util\ConfigService" id="Shopware\Core\System\Config\Util\ConfigService">
            <argument type="service" id="Doctrine\DBAL\Connection" />
        </service>

        <service class="Shopware\Core\System\Config\Util\CachedConfigService" decorates="Shopware\Core\System\Config\Util\ConfigService" id="Shopware\Core\System\Config\Util\CachedConfigService">
            <argument type="service" id="Shopware\Core\System\Config\Util\CachedConfigService.inner" />
            <argument type="service" id="shopware.cache" />
        </service>

        <service id="shopware.config" alias="Shopware\Core\System\Config\Util\Config" />
        <service synthetic="true" id="Shopware\Core\System\Config\Util\Config" class="Shopware\Core\System\Config\Util\Config" />
    </services>
</container>                
                