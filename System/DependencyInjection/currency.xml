<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Core\System\Currency\CurrencyRepository.v1" id="Shopware\Core\System\Currency\CurrencyRepository" public="true"/>
        <service alias="Shopware\Core\System\Currency\Aggregate\CurrencyTranslation\CurrencyTranslationRepository.v1" id="Shopware\Core\System\Currency\Aggregate\CurrencyTranslation\CurrencyTranslationRepository" public="true"/>

        <service class="Shopware\Core\System\Currency\CurrencyDefinition" id="Shopware\Core\System\Currency\CurrencyDefinition" >
            <tag name="shopware.entity.definition" entity="currency" />
        </service>
        <service class="Shopware\Core\System\Currency\CurrencyRepository" id="Shopware\Core\System\Currency\CurrencyRepository.v1" public="true">
          <argument id="Shopware\Core\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Core\Framework\ORM\Version\Service\VersionManager" type="service"/>
          <argument id="Shopware\Core\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Core\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Core\System\Currency\Aggregate\CurrencyTranslation\CurrencyTranslationDefinition" id="Shopware\Core\System\Currency\Aggregate\CurrencyTranslation\CurrencyTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="currency_translation" />
        </service>
        <service class="Shopware\Core\System\Currency\Aggregate\CurrencyTranslation\CurrencyTranslationRepository" id="Shopware\Core\System\Currency\Aggregate\CurrencyTranslation\CurrencyTranslationRepository.v1" public="true">
          <argument id="Shopware\Core\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Core\Framework\ORM\Version\Service\VersionManager" type="service"/>
          <argument id="Shopware\Core\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Core\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                