<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->

        <service class="Shopware\Core\System\Mail\MailDefinition" id="Shopware\Core\System\Mail\MailDefinition" >
            <tag name="shopware.entity.definition" entity="mail" />
        </service>

        <service class="Shopware\Core\System\Mail\Aggregate\MailAttachment\MailAttachmentDefinition" id="Shopware\Core\System\Mail\Aggregate\MailAttachment\MailAttachmentDefinition" >
            <tag name="shopware.entity.definition" entity="mail_attachment" />
        </service>

        <service class="Shopware\Core\System\Mail\Aggregate\MailTranslation\MailTranslationDefinition" id="Shopware\Core\System\Mail\Aggregate\MailTranslation\MailTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="mail_translation" />
        </service>

    </services>
</container>                
