<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\Core\System\Mail\MailRepository.v1" id="Shopware\Core\System\Mail\MailRepository" public="true"/>
        <service alias="Shopware\Core\System\Mail\Aggregate\MailAttachment\MailAttachmentRepository.v1" id="Shopware\Core\System\Mail\Aggregate\MailAttachment\MailAttachmentRepository" public="true"/>
        <service alias="Shopware\Core\System\Mail\Aggregate\MailTranslation\MailTranslationRepository.v1" id="Shopware\Core\System\Mail\Aggregate\MailTranslation\MailTranslationRepository" public="true"/>

        <service class="Shopware\Core\System\Mail\MailDefinition" id="Shopware\Core\System\Mail\MailDefinition" >
            <tag name="shopware.entity.definition" entity="mail" />
        </service>
        <service class="Shopware\Core\System\Mail\MailRepository" id="Shopware\Core\System\Mail\MailRepository.v1" public="true">
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntityReader" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Version\Service\VersionManager" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntitySearcher" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntityAggregator" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
        <service class="Shopware\Core\System\Mail\Aggregate\MailAttachment\MailAttachmentDefinition" id="Shopware\Core\System\Mail\Aggregate\MailAttachment\MailAttachmentDefinition" >
            <tag name="shopware.entity.definition" entity="mail_attachment" />
        </service>
        <service class="Shopware\Core\System\Mail\Aggregate\MailAttachment\MailAttachmentRepository" id="Shopware\Core\System\Mail\Aggregate\MailAttachment\MailAttachmentRepository.v1" public="true">
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntityReader" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Version\Service\VersionManager" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntitySearcher" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntityAggregator" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
        <service class="Shopware\Core\System\Mail\Aggregate\MailTranslation\MailTranslationDefinition" id="Shopware\Core\System\Mail\Aggregate\MailTranslation\MailTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="mail_translation" />
        </service>
        <service class="Shopware\Core\System\Mail\Aggregate\MailTranslation\MailTranslationRepository" id="Shopware\Core\System\Mail\Aggregate\MailTranslation\MailTranslationRepository.v1" public="true">
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntityReader" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Version\Service\VersionManager" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntitySearcher" type="service"/>
            <argument id="Shopware\Core\Framework\ORM\Dbal\EntityAggregator" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
