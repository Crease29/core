<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Core\System\Locale\LocaleDefinition" id="Shopware\Core\System\Locale\LocaleDefinition">
            <tag name="shopware.entity.definition" entity="locale"/>
        </service>

        <service class="Shopware\Core\System\Locale\Aggregate\LocaleTranslation\LocaleTranslationDefinition" id="Shopware\Core\System\Locale\Aggregate\LocaleTranslation\LocaleTranslationDefinition">
            <tag name="shopware.entity.definition" entity="locale_translation"/>
        </service>

        <service class="Shopware\Core\System\Locale\LocaleLanguageResolver" id="Shopware\Core\System\Locale\LocaleLanguageResolver">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>
    </services>
</container>                
                