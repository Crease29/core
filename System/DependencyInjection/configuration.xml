<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Versioning -->
        <service alias="Shopware\System\Configuration\Repository\ConfigurationGroupRepository.v1" id="Shopware\System\Configuration\Repository\ConfigurationGroupRepository" public="true" />
        <service alias="Shopware\System\Configuration\Repository\ConfigurationGroupOptionRepository.v1" id="Shopware\System\Configuration\Repository\ConfigurationGroupOptionRepository" public="true" />
        <service alias="Shopware\System\Configuration\Repository\ConfigurationGroupOptionTranslationRepository.v1" id="Shopware\System\Configuration\Repository\ConfigurationGroupOptionTranslationRepository" public="true" />
        <service alias="Shopware\System\Configuration\Repository\ConfigurationGroupTranslationRepository.v1" id="Shopware\System\Configuration\Repository\ConfigurationGroupTranslationRepository" public="true" />

         <service class="Shopware\System\Configuration\Definition\ConfigurationGroupDefinition" id="Shopware\System\Configuration\Definition\ConfigurationGroupDefinition" >
            <tag name="shopware.entity.definition" entity="configuration_group" />
        </service>

        <service class="Shopware\System\Configuration\Repository\ConfigurationGroupRepository" id="Shopware\System\Configuration\Repository\ConfigurationGroupRepository.v1" public="true">
          <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>

         <service class="Shopware\System\Configuration\Definition\ConfigurationGroupOptionDefinition" id="Shopware\System\Configuration\Definition\ConfigurationGroupOptionDefinition" >
            <tag name="shopware.entity.definition" entity="configuration_group_option" />
        </service>

        <service class="Shopware\System\Configuration\Repository\ConfigurationGroupOptionRepository" id="Shopware\System\Configuration\Repository\ConfigurationGroupOptionRepository.v1" public="true">
          <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>

         <service class="Shopware\System\Configuration\Definition\ConfigurationGroupOptionTranslationDefinition" id="Shopware\System\Configuration\Definition\ConfigurationGroupOptionTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="configuration_group_option_translation" />
        </service>

        <service class="Shopware\System\Configuration\Repository\ConfigurationGroupOptionTranslationRepository" id="Shopware\System\Configuration\Repository\ConfigurationGroupOptionTranslationRepository.v1" public="true">
          <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>

         <service class="Shopware\System\Configuration\Definition\ConfigurationGroupTranslationDefinition" id="Shopware\System\Configuration\Definition\ConfigurationGroupTranslationDefinition" >
            <tag name="shopware.entity.definition" entity="configuration_group_translation" />
        </service>

        <service class="Shopware\System\Configuration\Repository\ConfigurationGroupTranslationRepository" id="Shopware\System\Configuration\Repository\ConfigurationGroupTranslationRepository.v1" public="true">
          <argument id="Shopware\Framework\ORM\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Framework\ORM\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                