<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\StorefrontApi\Product\StorefrontProductRepository" id="Shopware\StorefrontApi\Product\StorefrontProductRepository">
            <argument type="service" id="Shopware\Content\Product\Repository\ProductRepository"/>
            <argument type="service" id="Shopware\Checkout\Cart\Price\PriceCalculator"/>
            <tag name="shopware.traceable" label="product.storefront-repository" />
        </service>

        <service class="Shopware\StorefrontApi\Context\StorefrontContextPersister" id="Shopware\StorefrontApi\Context\StorefrontContextPersister">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>

        <service class="Shopware\StorefrontApi\Context\StorefrontContextService" id="Shopware\StorefrontApi\Context\StorefrontContextService">
            <argument type="service" id="Shopware\Context\Service\ContextFactory"/>
            <argument type="service" id="cache.serializer"/>
            <argument type="service" id="serializer"/>
            <argument type="service" id="Shopware\Context\Service\ContextRuleLoader"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextPersister"/>
            <tag name="shopware.traceable" />
        </service>

        <service class="Shopware\StorefrontApi\Controller\ProductController" id="Shopware\StorefrontApi\Controller\ProductController" public="true">
            <argument id="Shopware\StorefrontApi\Product\StorefrontProductRepository" type="service"/>
            <argument type="service" id="Shopware\Rest\Response\ResponseFactory"/>
            <argument type="service" id="Shopware\Framework\ORM\Search\SearchCriteriaBuilder"/>
        </service>

        <service class="Shopware\StorefrontApi\Controller\CheckoutController" id="Shopware\StorefrontApi\Controller\CheckoutController" public="true">
            <argument id="Shopware\Checkout\Cart\Cart\CircularCartCalculation" type="service"/>
            <argument id="Shopware\CartBridge\Cart\CartPersister" type="service"/>
            <argument id="Shopware\CartBridge\Order\OrderPersister" type="service"/>
            <argument type="service" id="Shopware\Checkout\Order\Repository\OrderRepository"/>
            <argument type="service" id="serializer"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextPersister"/>
        </service>

        <service class="Shopware\StorefrontApi\Controller\CustomerController" id="Shopware\StorefrontApi\Controller\CustomerController" public="true">
            <argument id="serializer" type="service"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextPersister"/>
            <argument type="service" id="Shopware\StorefrontApi\Firewall\CustomerProvider"/>
        </service>

        <service class="Shopware\StorefrontApi\Controller\ContextController" id="Shopware\StorefrontApi\Controller\ContextController" public="true">
            <argument id="Shopware\Checkout\Payment\Repository\PaymentMethodRepository" type="service"/>
            <argument id="Shopware\Checkout\Shipping\Repository\ShippingMethodRepository" type="service"/>
            <argument id="Shopware\Checkout\Customer\Repository\CustomerAddressRepository" type="service"/>
            <argument id="Shopware\StorefrontApi\Context\StorefrontContextPersister" type="service"/>
            <argument type="service" id="serializer"/>
        </service>

        <service class="Shopware\StorefrontApi\Firewall\CustomerProvider" id="Shopware\StorefrontApi\Firewall\CustomerProvider">
            <argument type="service" id="Shopware\Checkout\Customer\Repository\CustomerRepository"/>
        </service>

        <service class="Shopware\StorefrontApi\Search\KeywordSearchTermInterpreter" id="Shopware\StorefrontApi\Search\KeywordSearchTermInterpreter">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Framework\ORM\Search\Term\Tokenizer"/>
            <argument type="service" id="logger"/>
        </service>

        <service class="Shopware\StorefrontApi\Firewall\ContextUserProvider" id="Shopware\StorefrontApi\Firewall\ContextUserProvider">
            <argument id="Shopware\StorefrontApi\Context\StorefrontContextService" type="service"/>
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>

        <service class="Shopware\StorefrontApi\Firewall\ApplicationAuthenticator" id="Shopware\StorefrontApi\Firewall\ApplicationAuthenticator">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>

    </services>
</container>
