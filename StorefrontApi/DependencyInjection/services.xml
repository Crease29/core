<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service class="Shopware\StorefrontApi\Firewall\CustomerProvider" id="Shopware\StorefrontApi\Firewall\CustomerProvider">
            <argument type="service" id="Shopware\Checkout\Customer\CustomerRepository"/>
        </service>

        <service class="Shopware\StorefrontApi\Firewall\ContextUserProvider" id="Shopware\StorefrontApi\Firewall\ContextUserProvider">
            <argument id="Shopware\Application\Context\Util\StorefrontContextService" type="service"/>
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>

        <service class="Shopware\StorefrontApi\Firewall\ApplicationAuthenticator" id="Shopware\StorefrontApi\Firewall\ApplicationAuthenticator">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>
    </services>
</container>
