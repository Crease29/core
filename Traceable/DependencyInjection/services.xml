<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Traceable\DataCollector\CartCollector" public="false">
            <tag name="data_collector" template="@Traceable/Profiler/layout.html.twig" id="cart"/>
            <argument type="service" id="Shopware\Traceable\Cart\TracedCartActions"/>
        </service>

        <service class="Shopware\Traceable\Cart\TracedCartActions" id="Shopware\Traceable\Cart\TracedCartActions"/>

        <service class="Shopware\Traceable\Dbal\TraceableEntityReader"
                 id="Shopware\Traceable\Dbal\TraceableEntityReader"
                 decorates="Shopware\Api\Entity\Dbal\EntityReader">

            <argument id="Shopware\Traceable\Dbal\TraceableEntityReader.inner" type="service"/>
            <argument id="debug.stopwatch" type="service"/>
        </service>

        <service class="Shopware\Traceable\Dbal\TraceableEntitySearcher"
                 id="Shopware\Traceable\Dbal\TraceableEntitySearcher"
                 decorates="Shopware\Api\Entity\Dbal\EntitySearcher">

            <argument id="Shopware\Traceable\Dbal\TraceableEntitySearcher.inner" type="service"/>
            <argument id="debug.stopwatch" type="service"/>
        </service>


    </services>
</container>